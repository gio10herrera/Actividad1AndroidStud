<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainEstadoEst"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEstadoEstudiante"
    android:background="@color/backgrounds"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp">

    <TextView
        android:id="@+id/txtNombreApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/textosSecundarios"
        android:textSize="30sp"
        tools:text="NOMBRE APELLIDO"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/otros"
        android:layout_marginVertical="50dp"
        />

    <TextView
        android:id="@+id/txtMaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtNombreApellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/textosSecundarios"
        android:textSize="25sp"
        tools:text="MASTER CURSADO"
        android:gravity="center"
        android:textStyle="normal"
        android:background="@color/otros"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/textosSecundarios"
        android:textSize="60sp"
        tools:text="APROBADO"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/otros"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtEstado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/botones"
        android:text="@string/regresar"
        android:textSize="20sp"
        android:textColor="@color/textosSecundarios"
        />



</androidx.constraintlayout.widget.ConstraintLayout>