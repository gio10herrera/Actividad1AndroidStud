<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContainer"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/cards"
    app:cardCornerRadius="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNombreEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:text="PRUEBA" />

        <TextView
            android:id="@+id/txtDniEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textosSecundarios"
            android:textSize="17sp"
            android:textStyle="normal"
            tools:text="DNI"
            android:layout_gravity="start|center"/>

        <TextView
            android:id="@+id/txtMasterEstudiante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textosSecundarios"
            android:textSize="17sp"
            android:textStyle="italic"
            tools:text="MASTER"
            android:layout_gravity="start|bottom"/>





            <ImageView
                android:id="@+id/imgViewBandera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|top"
                android:src="@drawable/sin_bandera" />




    </FrameLayout>


</androidx.cardview.widget.CardView>